{
  "name": "ai-customer-support-chatbot",
  "private": true,
  "version": "1.0.0",
  "workspaces": [
    "server",
    "client"
  ],
  "scripts": {
    "dev": "npm-run-all -p dev:server dev:client",
    "dev:server": "npm --workspace server run dev",
    "dev:client": "npm --workspace client run dev",
    "build": "npm-run-all -s build:client build:server",
    "build:client": "npm --workspace client run build",
    "build:server": "npm --workspace server run build",
    "start": "npm --workspace server run start",
    "seed:kb": "npm --workspace server run seed:kb"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5"
  }
}


